<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModels="clr-namespace:Needlelight.ViewModels"
        xmlns:ext="clr-namespace:Needlelight.Extensions"
        xmlns:md="clr-namespace:Markdown.Avalonia;assembly=Markdown.Avalonia"
        mc:Ignorable="d" d:DesignWidth="550" d:DesignHeight="450"
        x:Class="Needlelight.Views.Windows.ReadmePopup"
        x:DataType="viewModels:ReadmePopupViewModel"
        x:CompileBindings="True"
        SystemDecorations="BorderOnly"
        WindowStartupLocation="CenterOwner"
        CanResize="False"
        Title="Readme Viewer">
    <Grid RowDefinitions="Auto, *, Auto"
          Margin="0 30 0 15 ">
        
        <StackPanel 
            Grid.Row="0"
            IsVisible="{Binding IsRequestingReleaseNotes}"
            Orientation="Vertical"
            HorizontalAlignment="Stretch"
            Margin="0 0 0 15">
            <TextBlock 
                TextAlignment="Center" 
                FontSize="24"
                Text="Release notes:"/>
            <Separator/>
        </StackPanel>
        
        <md:MarkdownScrollViewer
            Grid.Row="1"
            Markdown="{Binding Readme}" 
            Margin="30 0"
            />
        
        <Button 
            HotKey="Ctrl+W"
            Grid.Row="2"
            HorizontalAlignment="Right"
            Content="Close"
            Command="{Binding Close}"
            Click="Close"
            Padding="10"
            Margin="0 10 20 0"/>
    </Grid>
</Window>
