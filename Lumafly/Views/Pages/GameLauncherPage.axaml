<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="Lumafly.Views.Pages.GameLauncherPage">
  <ScrollViewer>
    <StackPanel Margin="40" Spacing="24">

      <!-- Game Selection Section -->
      <Border Classes="card" MaxWidth="600" HorizontalAlignment="Center">
        <Grid ColumnDefinitions="*,Auto" RowDefinitions="Auto">
          <StackPanel Grid.Column="0" Spacing="4">
            <TextBlock Text="Select Game"
                       FontFamily="{DynamicResource UIFont}"
                       FontSize="18"
                       FontWeight="SemiBold"
                       Foreground="{DynamicResource Brush.TextPrimary}"/>
            <TextBlock Text="Choose Hollow Knight or Silksong"
                       FontFamily="{DynamicResource UIFont}"
                       FontSize="12"
                       Foreground="{DynamicResource Brush.TextSecondary}"/>
          </StackPanel>
          <ComboBox x:Name="GameSelectCombo" Grid.Column="1"
                    MinWidth="280"
                    VerticalAlignment="Center"
                    FontFamily="{DynamicResource UIFont}"
                    FontSize="14"/>
        </Grid>
      </Border>

      <!-- Hero Section with Game Art -->
      <StackPanel Spacing="16" HorizontalAlignment="Center">
        <Border Background="{DynamicResource Brush.Surface}"
                CornerRadius="{DynamicResource Radius.LG}"
                BorderThickness="1"
                BorderBrush="{DynamicResource Brush.Border}"
                Width="180"
                Height="180"
                HorizontalAlignment="Center">
          <TextBlock Text="⚔️"
                     FontSize="56"
                     HorizontalAlignment="Center"
                     VerticalAlignment="Center"
                     Foreground="{DynamicResource Brush.Accent}"/>
        </Border>

  <TextBlock x:Name="GameTitleText" Text="Hollow Knight"
                   FontFamily="{DynamicResource GameFont}"
                   FontSize="32"
                   FontWeight="Bold"
                   Foreground="{DynamicResource Brush.TextPrimary}"
                   HorizontalAlignment="Center"/>

        <TextBlock Text="Prepare for your journey into Hallownest"
                   FontFamily="{DynamicResource UIFont}"
                   FontSize="14"
                   Foreground="{DynamicResource Brush.TextSecondary}"
                   HorizontalAlignment="Center"/>
      </StackPanel>

  <!-- Centered Launch Buttons - lower and closer -->
  <StackPanel Orientation="Horizontal"
      HorizontalAlignment="Center"
      Spacing="8"
      Margin="0,56,0,0">
  <Button Classes="game-launch"
                Content="Launch Vanilla Game"
                MinWidth="160"
                FontFamily="{DynamicResource UIFont}"
                ToolTip.Tip="Start the original game without modifications"/>

  <Button Classes="game-launch"
                Content="Launch Modded Game"
                MinWidth="160"
                FontFamily="{DynamicResource UIFont}"
                ToolTip.Tip="Start the game with all enabled modifications"/>
      </StackPanel>      <!-- Game Configuration -->
      <Border Classes="card" MaxWidth="600" HorizontalAlignment="Center">
        <StackPanel Spacing="20">
          <TextBlock Text="Game Configuration"
                     FontFamily="{DynamicResource UIFont}"
                     FontSize="18"
                     FontWeight="SemiBold"
                     Foreground="{DynamicResource Brush.TextPrimary}"/>

          <!-- Game Toggle -->
          <Grid ColumnDefinitions="*,Auto" RowDefinitions="Auto,Auto">
            <StackPanel Grid.Column="0" Spacing="4">
              <TextBlock Text="Game Version"
                         FontFamily="{DynamicResource UIFont}"
                         FontWeight="Medium"
                         Foreground="{DynamicResource Brush.TextPrimary}"/>
              <TextBlock Text="Switch between different game installations"
                         FontFamily="{DynamicResource UIFont}"
                         FontSize="12"
                         Foreground="{DynamicResource Brush.TextSecondary}"/>
            </StackPanel>
            <ComboBox Grid.Column="1"
                      MinWidth="200"
                      VerticalAlignment="Center">
              <ComboBoxItem Content="Hollow Knight (Steam)"/>
              <ComboBoxItem Content="Hollow Knight (GOG)"/>
              <ComboBoxItem Content="Custom Installation"/>
            </ComboBox>
          </Grid>

          <!-- Game Path -->
          <Grid ColumnDefinitions="*,Auto,Auto" RowDefinitions="Auto,Auto">
            <StackPanel Grid.Column="0" Spacing="4">
              <TextBlock Text="Game Path"
                         FontFamily="{DynamicResource UIFont}"
                         FontWeight="Medium"
                         Foreground="{DynamicResource Brush.TextPrimary}"/>
              <TextBlock Text="Location of your Hollow Knight installation"
                         FontFamily="{DynamicResource UIFont}"
                         FontSize="12"
                         Foreground="{DynamicResource Brush.TextSecondary}"/>
            </StackPanel>
            <TextBox Grid.Column="1"
                     MinWidth="250"
                     VerticalAlignment="Center"
                     Margin="0,0,8,0"
                     Text="C:\Program Files (x86)\Steam\steamapps\common\Hollow Knight"
                     IsReadOnly="True"/>
            <Button Grid.Column="2"
                    Classes="secondary"
                    Content="Browse..."
                    VerticalAlignment="Center"/>
          </Grid>
        </StackPanel>
      </Border>

      <!-- Game Status Cards -->
      <Grid ColumnDefinitions="1*,16,1*,16,1*" MaxWidth="800" HorizontalAlignment="Center">
        <!-- Profile Status -->
        <Border Grid.Column="0" Classes="card">
          <StackPanel Spacing="12">
            <TextBlock Text="Save Profile"
                       FontFamily="{DynamicResource UIFont}"
                       FontSize="14"
                       FontWeight="SemiBold"
                       Foreground="{DynamicResource Brush.TextSecondary}"/>

            <StackPanel Spacing="8">
              <Grid ColumnDefinitions="Auto,*">
                <TextBlock Grid.Column="0"
                           Text="Name:"
                           FontFamily="{DynamicResource UIFont}"
                           Foreground="{DynamicResource Brush.TextSecondary}"
                           Margin="0,0,12,0"/>
                <TextBlock Grid.Column="1"
                           Text="Steel Soul"
                           FontFamily="{DynamicResource UIFont}"
                           FontWeight="Medium"
                           Foreground="{DynamicResource Brush.Accent}"/>
              </Grid>

              <Grid ColumnDefinitions="Auto,*">
                <TextBlock Grid.Column="0"
                           Text="Progress:"
                           FontFamily="{DynamicResource UIFont}"
                           Foreground="{DynamicResource Brush.TextSecondary}"
                           Margin="0,0,12,0"/>
                <TextBlock Grid.Column="1"
                           Text="112%"
                           FontFamily="{DynamicResource GameFont}"
                           FontWeight="Bold"
                           Foreground="{DynamicResource Brush.Accent}"/>
              </Grid>
            </StackPanel>
          </StackPanel>
        </Border>

        <!-- Mod Status -->
        <Border Grid.Column="2" Classes="card">
          <StackPanel Spacing="12">
            <TextBlock Text="Modifications"
                       FontFamily="{DynamicResource UIFont}"
                       FontSize="14"
                       FontWeight="SemiBold"
                       Foreground="{DynamicResource Brush.TextSecondary}"/>

            <StackPanel Spacing="8">
              <Grid ColumnDefinitions="Auto,*">
                <TextBlock Grid.Column="0"
                           Text="Active:"
                           FontFamily="{DynamicResource UIFont}"
                           Foreground="{DynamicResource Brush.TextSecondary}"
                           Margin="0,0,12,0"/>
                <TextBlock Grid.Column="1"
                           Text="24 mods"
                           FontFamily="{DynamicResource UIFont}"
                           FontWeight="Medium"
                           Foreground="{DynamicResource Brush.TextPrimary}"/>
              </Grid>

              <Grid ColumnDefinitions="Auto,*">
                <TextBlock Grid.Column="0"
                           Text="Status:"
                           FontFamily="{DynamicResource UIFont}"
                           Foreground="{DynamicResource Brush.TextSecondary}"
                           Margin="0,0,12,0"/>
                <TextBlock Grid.Column="1"
                           Text="Ready"
                           FontFamily="{DynamicResource UIFont}"
                           FontWeight="Medium"
                           Foreground="{DynamicResource Brush.Accent}"/>
              </Grid>
            </StackPanel>
          </StackPanel>
        </Border>

        <!-- System Status -->
        <Border Grid.Column="4" Classes="card">
          <StackPanel Spacing="12">
            <TextBlock Text="System"
                       FontFamily="{DynamicResource UIFont}"
                       FontSize="14"
                       FontWeight="SemiBold"
                       Foreground="{DynamicResource Brush.TextSecondary}"/>

            <StackPanel Spacing="8">
              <Grid ColumnDefinitions="Auto,*">
                <TextBlock Grid.Column="0"
                           Text="Game:"
                           FontFamily="{DynamicResource UIFont}"
                           Foreground="{DynamicResource Brush.TextSecondary}"
                           Margin="0,0,12,0"/>
                <TextBlock Grid.Column="1"
                           Text="Found"
                           FontFamily="{DynamicResource UIFont}"
                           FontWeight="Medium"
                           Foreground="{DynamicResource Brush.Accent}"/>
              </Grid>

              <Grid ColumnDefinitions="Auto,*">
                <TextBlock Grid.Column="0"
                           Text="Backup:"
                           FontFamily="{DynamicResource UIFont}"
                           Foreground="{DynamicResource Brush.TextSecondary}"
                           Margin="0,0,12,0"/>
                <TextBlock Grid.Column="1"
                           Text="Available"
                           FontFamily="{DynamicResource UIFont}"
                           FontWeight="Medium"
                           Foreground="{DynamicResource Brush.TextPrimary}"/>
              </Grid>
            </StackPanel>
          </StackPanel>
        </Border>
      </Grid>

      <!-- Quick Actions -->
      <StackPanel Spacing="16" HorizontalAlignment="Center">
        <TextBlock Text="Quick Actions"
                   FontFamily="{DynamicResource UIFont}"
                   FontSize="16"
                   FontWeight="SemiBold"
                   Foreground="{DynamicResource Brush.TextPrimary}"
                   HorizontalAlignment="Center"/>

        <StackPanel Orientation="Horizontal" Spacing="16">
          <Button Classes="secondary"
                  Content="Backup Save"
                  Width="140"
                  Height="40"/>

          <Button Classes="secondary"
                  Content="Open Game Folder"
                  Width="140"
                  Height="40"/>

          <Button Classes="secondary"
                  Content="Verify Files"
                  Width="140"
                  Height="40"/>
        </StackPanel>
      </StackPanel>

    </StackPanel>
  </ScrollViewer>
</UserControl>
