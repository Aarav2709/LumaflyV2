<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:s="using:Scarab.ViewModels"
        xmlns:views="using:Scarab.Views"
        Width="670" Height="450"
        x:Class="Scarab.Views.MainWindow"
        x:DataType="s:MainWindowViewModel"
        Icon="/Assets/omegamaggotprime.ico"
        Title="Scarab">
        <TabControl TabStripPlacement="Top" HorizontalAlignment="Stretch">
                <TabItem x:Name="ModListTab" Header="Mods" Content="{Binding Content}" HorizontalContentAlignment="Stretch"/> 
                <TabItem Content="Settings" Header="Settings" />
                <TabItem Content="Info" Header="Info" />
        </TabControl>
</Window>
