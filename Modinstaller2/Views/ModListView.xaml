<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:sys="clr-namespace:System;assembly=netstandard"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="550"
             x:Class="Modinstaller2.Views.ModListView">
    <DockPanel>
        <Button DockPanel.Dock="Bottom">Button</Button>
        <ScrollViewer>
            <ItemsControl Items="{Binding Items}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Grid ColumnDefinitions="*,*,*" Margin="4">
                            <TextBlock Grid.Column="0" Text="{Binding Name}"/>
                            <CheckBox
                              Grid.Column="1"
                              Command="{Binding OnEnable}"
                              IsChecked="{Binding Enabled}"
                              IsEnabled="{Binding Installed}"
                              Content= "Enabled?"
                            />
                            <CheckBox
                               Grid.Column="2"
                               Command="{Binding $parent[UserControl].DataContext.OnInstall}"
                               CommandParameter="{Binding .}"
                               IsChecked="{Binding InstalledAndUpdated}"
                               Content="{Binding InstallText}"
                            >
                                <CheckBox.Resources>
                                    <SolidColorBrush x:Key="HighlightBrush" Color="{Binding Color}"/>
                                    <sys:Double x:Key="ThemeDisabledOpacity">1</sys:Double>
                                </CheckBox.Resources>
                            </CheckBox>
                        </Grid>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </DockPanel>
</UserControl>
